  </head>
  <body class="bg-secondary">
    <header>
      <%= render "home/navbar" %>
      <%= render "layouts/alerts" %>
    </header>
    <main>
      <div class="container pt-5">
        <div class="card">
          <div class="card-body bg-light">
            <%= yield %>
          </main>
        </body>
      </html>
